<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://cdn.tiny.cloud/1/w5o6851coln6uxz4eqge6bq0qi2ez0n5zwyprq67sybzjlf9/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
      tinymce.init({
        selector: "textarea",
        plugins: [
          'advlist autolink lists link image charmap print preview anchor',
          'searchreplace visualblocks code fullscreen',
          'insertdatetime media table paste code help wordcount'
        ],
        toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | help',
        height: 500,
        branding: false,
        content_style: "body { font-family:Inter, sans-serif; font-size:16px }",
      });
    </script>
     <style>
      
        @import url('https://fonts.cdnfonts.com/css/montserrat');
            
        * {
            font-family: 'Montserrat', sans-serif !important;
        }
      </style>
</head>

<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="formbackgroundiv dark:bg-gray-800 shadow-2xl rounded-lg p-8 max-w-6xl w-full transition-transform duration-300 ease-in-out transform">
            <h1 class="text-4xl font-extrabold text-center py-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 mb-8">
                Modifiez Votre Article
            </h1>

            <form method="POST" action="/articles/<%= article.id %>/update" enctype="multipart/form-data" class="space-y-6">
                <div class="relative">
                    <input type="text" id="title" name="title" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100" placeholder="" value="<%= article.title %>" required />
                    <label for="title" id="title-label" class="absolute left-4 top-3 text-gray-500 dark:text-gray-400 transition-all duration-300 ease-in-out transform origin-left scale-100">
                        Titre de l'article
                    </label>
                </div>

                <div class="relative">
                    <input type="text" id="description" name="description" class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100" placeholder="" value="<%= article.description %>" required />
                    <label for="description" id="description-label" class="absolute left-4 top-3 text-gray-500 dark:text-gray-400 transition-all duration-300 ease-in-out transform origin-left scale-100">
                        Description de l'article
                    </label>
                </div>

                <div class="space-y-6">
                    <h2 class="text-3xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 text-center mb-6">
                        Ajoutez votre couverture pour votre article
                    </h2>

                    <div class="flex items-center justify-center w-full">
                        <label for="coverImage" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2" />
                                </svg>
                                <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
                                    <span class="font-semibold">Cliquez pour télécharger la couverture</span> ou faites glisser et déposez
                                </p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    SVG, PNG, JPG ou GIF (MAX. 800x400px)
                                </p>
                            </div>
                            <input id="coverImage" type="file" name="coverImage" class="hidden" />
                        </label>
                    </div>
                </div>

                <div>
                    <textarea id="content" name="content" rows="8" class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50 dark:bg-gray-700 text-gray-900 dark:text-gray-100"><%= article.content %></textarea>
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold px-6 py-3 mb-5 rounded-full shadow-lg hover:from-purple-600 hover:to-blue-500 transform transition-transform transition-colors duration-300 flex items-end justify-end focus:outline-none focus:ring-4 focus:ring-blue-300">
                        Mettre à jour l'Article
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
      const inputTitle = document.getElementById("title");
      const labelTitle = document.getElementById("title-label");
      const inputDescription = document.getElementById("description");
      const labelDescription = document.getElementById("description-label");

      function checkInput(input, label) {
        if (input.value !== "") {
          label.classList.add("-translate-y-4", "scale-75", "text-blue-500");
        } else {
          label.classList.remove("-translate-y-4", "scale-75", "text-blue-500");
        }
      }

      inputTitle.addEventListener("focus", () => checkInput(inputTitle, labelTitle));
      inputTitle.addEventListener("blur", () => checkInput(inputTitle, labelTitle));
      inputTitle.addEventListener("input", () => checkInput(inputTitle, labelTitle));

      inputDescription.addEventListener("focus", () => checkInput(inputDescription, labelDescription));
      inputDescription.addEventListener("blur", () => checkInput(inputDescription, labelDescription));
      inputDescription.addEventListener("input", () => checkInput(inputDescription, labelDescription));

      checkInput(inputTitle, labelTitle);
      checkInput(inputDescription, labelDescription);
    </script>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>    
