<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tinymce/5.10.2/skins/ui/oxide/content.min.css">
</head>
<style>
  .card:hover {
    background-color: white !important;
  }

  .card:hover .overlay {
    opacity: 1;
  }
  
  .card:hover .card-image {
    opacity: 0.7;
  }
</style>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-8">
      <% articles.forEach(article => { %>
        <div class="card relative w-full max-w-sm rounded-xl shadow-lg transform transition-transform hover:scale-102">
          <!-- User profile, post date, and options (three dots) -->
            <div class="flex justify-between px-10 items-center p-4 bg-white rounded-t-xl">
              <div class="flex items-center">
                <img src="<%= article.User.image %>" alt="User Profile" class="w-10 h-10 rounded-full">
                <div class="ml-3">
                  <h3 class="text-gray-800  font-semibold"><%= article.User.fullname %></h3>
                  <p class="text-gray-500 text-sm"><%= new Date(article.createdAt).toLocaleDateString() %></p>
                </div>
              </div>
            </div>
          
            <div id="dropdownDots<%= article.id %>" class="z-50 hidden  bg-white divide-y divide-gray-100 rounded-lg shadow w-40 dark:bg-gray-700 dark:divide-gray-600">
              <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconButton">
                <li>
                  <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                    <span>Update</span>
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>
                </li>
                <li>
                  <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                    <span>Delete</span>
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </li>
                <li>
                  <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                    <span>Copy URL</span>
                    <i class="fa-solid fa-clipboard"></i>
                  </a>
                </li>
                <li>
                  <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                    <span>Save</span>
                    <i class="fa-regular fa-bookmark"></i>
                  </a>
                </li>
              </ul>
            </div>
          
            <!-- Card image with overlay -->
            <div class="relative">
              <a href="/articles/<%= article.id %>">
                <img src="<%= article.coverImage %>" alt="<%= article.title %>" class="card-image w-full h-48 object-cover rounded-t-xl transition-opacity duration-300">
                <div class="overlay absolute inset-0 bg-[#4e4e4e6a] flex items-center justify-center opacity-0 transition-opacity duration-300">
                  <span class="text-white text-lg font-semibold">Read More</span>
                </div>
              </a>
            </div>
          
            <!-- Card content -->
            <div class="card-content height p-4 line-clamp-2 bg-white rounded-b-xl">
              <h2 class="card-title text-xl mb-5 font-semibold "><%= article.title %></h2>
              <p class="card-description overflow-hidden line-clamp-3  "><%- article.description %></p>
            </div>
          
            <div class="flex justify-between p-4 bg-gray-200 rounded-lg  text-gray-700 dark:text-gray-300">
              <!-- Comment Button -->
              <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
                <i class="fa-regular fa-comment text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
                <span class="text-gray-700 group-hover:text-[#7a3cc4]">15</span>
              </button>
            
              <!-- Like Button -->
              <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
                <i class="fa-regular fa-heart text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
                <span class="text-gray-700 group-hover:text-[#7a3cc4]">15</span>
              </button>
            
              <!-- View Button -->
              <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
                <i class="fa-regular fa-eye text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
                <span class="text-gray-700 group-hover:text-[#7a3cc4]">124</span>
              </button>
            </div>
            
            
          </div>
        
          <div id="dropdownDots<%= article.id %>" class="z-50 hidden  bg-white divide-y divide-gray-100 rounded-lg shadow w-40 dark:bg-gray-700 dark:divide-gray-600">
            <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdownMenuIconButton">
              <li>
                <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                  <span>Update</span>
                  <i class="fa-solid fa-pen-to-square"></i>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                  <span>Delete</span>
                  <i class="fa-solid fa-trash"></i>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                  <span>Copy URL</span>
                  <i class="fa-solid fa-clipboard"></i>
                </a>
              </li>
              <li>
                <a href="#" class="flex items-center justify-between px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                  <span>Save</span>
                  <i class="fa-regular fa-bookmark"></i>
                </a>
              </li>
            </ul>
          </div>
        
          <!-- Card image with overlay -->
          <div class="relative">
            <a href="#">
              <img src="<%= article.coverImage %>" alt="<%= article.title %>" class="card-image w-full h-48 object-cover rounded-t-xl transition-opacity duration-300">
              <div class="overlay absolute inset-0 bg-[#4e4e4e6a] flex items-center justify-center opacity-0 transition-opacity duration-300">
                <span class="text-white text-lg font-semibold">Read More</span>
              </div>
            </a>
          </div>
        
          <!-- Card content -->
          <div class="card-content height p-4 line-clamp-2 bg-white rounded-b-xl">
            <h2 class="card-title text-xl mb-5 font-semibold "><%= article.title %></h2>
            <p class="card-description overflow-hidden  "><%- article.content %></p>
          </div>
        
          <div class="flex justify-between p-4 bg-gray-200 rounded-lg  text-gray-700 dark:text-gray-300">
            <!-- Comment Button -->
            <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
              <i class="fa-regular fa-comment text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
              <span class="text-gray-700 group-hover:text-[#7a3cc4]">15</span>
            </button>
          
            <!-- Like Button -->
            <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
              <i class="fa-regular fa-heart text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
              <span class="text-gray-700 group-hover:text-[#7a3cc4]">15</span>
            </button>
          
            <!-- View Button -->
            <button class="flex items-center space-x-2 group transition-transform transform hover:scale-105">
              <i class="fa-regular fa-eye text-[#8d4dee] group-hover:text-[#7a3cc4]"></i>
              <span class="text-gray-700 group-hover:text-[#7a3cc4]">124</span>
            </button>
          </div>
          
          
        </div>
    <% }) %>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
</body>
</html>
