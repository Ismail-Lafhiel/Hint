<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @import url('https://fonts.cdnfonts.com/css/montserrat');
        * {
            font-family: 'Montserrat', sans-serif !important;
        }
    </style>
</head>

<body class="bg-gray-100 text-gray-900">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="shadow-2xl rounded-lg p-8 max-w-6xl w-full transition-transform duration-300 ease-in-out transform">
            <h1 class="text-4xl font-extrabold text-center py-4 text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-purple-600 mb-8">
                Edit Your Comment
            </h1>

            <form method="POST" action="/comment/<%= comment.id %>/update" class="space-y-6">
                <div class="relative">
                    <textarea id="content" name="content" rows="8" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-50 text-gray-900" required><%= comment.content %></textarea>
                    <label for="content" id="content-label" class="absolute left-4 top-3 text-gray-500 transition-all duration-300 ease-in-out transform origin-left scale-100">
                        Edit your comment
                    </label>
                </div>

                <div class="flex justify-center">
                    <button type="submit" class="bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold px-6 py-3 mb-5 rounded-full shadow-lg hover:from-purple-600 hover:to-blue-500 transform transition-transform transition-colors duration-300 flex items-end justify-end focus:outline-none focus:ring-4 focus:ring-blue-300">
                        Update Comment
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
      const inputContent = document.getElementById("content");
      const labelContent = document.getElementById("content-label");

      function checkInput(input, label) {
        if (input.value !== "") {
          label.classList.add("-translate-y-4", "scale-75", "text-blue-500");
        } else {
          label.classList.remove("-translate-y-4", "scale-75", "text-blue-500");
        }
      }

      inputContent.addEventListener("focus", () => checkInput(inputContent, labelContent));
      inputContent.addEventListener("blur", () => checkInput(inputContent, labelContent));
      inputContent.addEventListener("input", () => checkInput(inputContent, labelContent));

      checkInput(inputContent, labelContent);
    </script>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
